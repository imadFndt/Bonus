<resources>
    <declare-styleable name="ToolbarView">
        <attr name="toolbarBackground" format="reference" />
        <attr name="title" format="string" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="description" format="string" />
        <attr name="descriptionTextAppearance" format="reference" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="TimeLineView">
        <attr name="ctlv_progress_color" format="color" />
        <attr name="ctlv_stroke_color" format="color" />
        <attr name="ctlv_title_color" format="color" />
        <attr name="ctlv_description_color" format="color" />

        <attr name="ctlv_progress_icon" format="reference" />
        <attr name="ctlv_disable_icon" format="reference" />

        <attr name="ctlv_stroke_size" format="dimension" />
        <attr name="ctlv_title_size" format="dimension" />
        <attr name="ctlv_description_size" format="dimension" />
        <attr name="ctlv_radius_size" format="dimension" />
        <attr name="ctlv_step_y_size" format="dimension" />
        <attr name="ctlv_step_y_first_size" format="dimension" />

        <attr name="ctlv_margin_top_title" format="dimension" />
        <attr name="ctlv_margin_top_description" format="dimension" />
        <attr name="ctlv_margin_top_progress_icon" format="dimension" />
        <attr name="ctlv_margin_horizontal_image" format="dimension" />
        <attr name="ctlv_margin_horizontal_text" format="dimension" />
        <attr name="ctlv_margin_horizontal_stroke" format="dimension" />

        <attr name="ctlv_image_lvl_size" format="dimension" />
        <attr name="ctlv_icon_progress_size" format="dimension" />
    </declare-styleable>
</resources>