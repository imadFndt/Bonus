<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/toolbar_profile_background"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:textAppearance="@style/TextStyle.Size26.Medium"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Иван Иванов" />

        <FrameLayout
            android:id="@+id/profileAvatarContainer"
            android:layout_width="@dimen/margin_64dp"
            android:layout_height="@dimen/margin_64dp"
            android:layout_marginVertical="@dimen/margin_24dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@drawable/toolbar_avatar_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileName">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileAvatar"
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_cool" />
        </FrameLayout>

        <TextView
            android:id="@+id/profileStartDateContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:textAppearance="@style/TextStyle.Size16"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/profileStartDateText"
            app:layout_constraintStart_toEndOf="@id/profileAvatarContainer"
            app:layout_constraintTop_toTopOf="@id/profileAvatarContainer"
            tools:text="c 20.04.2019" />

        <TextView
            android:id="@+id/profileStartDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/profile_in_company"
            android:textAppearance="@style/TextStyle.Size14"
            android:textColor="@color/transparentWhite"
            app:layout_constraintBottom_toBottomOf="@id/profileAvatarContainer"
            app:layout_constraintStart_toEndOf="@id/profileAvatarContainer"
            app:layout_constraintTop_toBottomOf="@id/profileStartDateContent" />

        <TextView
            android:id="@+id/profileCityContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:textAppearance="@style/TextStyle.Size16.Medium"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/profileCityText"
            app:layout_constraintStart_toEndOf="@id/profileStartDateContent"
            app:layout_constraintTop_toTopOf="@id/profileAvatarContainer"
            tools:text="Ульяновск" />

        <TextView
            android:id="@+id/profileCityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/profile_city"
            android:textAppearance="@style/TextStyle.Size14"
            android:textColor="@color/transparentWhite"
            app:layout_constraintBottom_toBottomOf="@id/profileAvatarContainer"
            app:layout_constraintStart_toEndOf="@id/profileStartDateContent"
            app:layout_constraintTop_toBottomOf="@id/profileCityContent" />

        <TextView
            android:id="@+id/profileSizeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:textAppearance="@style/TextStyle.Size16"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/profileCityText"
            app:layout_constraintStart_toEndOf="@id/profileCityContent"
            app:layout_constraintTop_toTopOf="@id/profileAvatarContainer"
            tools:text="46" />

        <TextView
            android:id="@+id/profileSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/profile_size"
            android:textAppearance="@style/TextStyle.Size14"
            android:textColor="@color/transparentWhite"
            app:layout_constraintBottom_toBottomOf="@id/profileAvatarContainer"
            app:layout_constraintStart_toEndOf="@id/profileCityContent"
            app:layout_constraintTop_toBottomOf="@id/profileCityContent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileToolbar"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/profileRolesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_32dp"
                android:text="@string/profile_roles"
                android:textAppearance="@style/TextStyle.Size20"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/profileChipsScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_12dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbarSize="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileRolesTitle">


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/profileChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_12dp"
                    app:singleLine="true" />
            </HorizontalScrollView>


            <TextView
                android:id="@+id/profileAchievementsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/profile_achievements"
                android:textAppearance="@style/TextStyle.Size20"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileChipsScrollView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profileAchievementsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingHorizontal="@dimen/margin_16dp"
                android:paddingTop="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileAchievementsTitle"
                app:spanCount="4"
                tools:listitem="@layout/item_profile_achievements" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
